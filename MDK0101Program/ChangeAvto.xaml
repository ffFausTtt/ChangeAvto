<Page x:Class="MDK0101Program.ChangeAvto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDK0101Program"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeAvto">

    <Grid Background="#ffdada">
        <Border Width="492" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30" CornerRadius="50" Height="343">
            <StackPanel Margin="0,0,0,-12">
                <TextBlock FontSize="30" FontWeight="Bold" HorizontalAlignment="Center">Изменение логина и пароля</TextBlock>
                <GroupBox Header="Логин" FontSize="15" HorizontalAlignment="Center" Width="300" Margin="10">
                    <TextBox Name="TBLogin"></TextBox>
                </GroupBox>
                <GroupBox Header="Пароль" FontSize="15" HorizontalAlignment="Center" Width="300">
                    <PasswordBox Name="PBPassword"></PasswordBox>
                </GroupBox>
                <Button x:Name="save" Content="Сохранить изменения" Click="save_Click" Width="200" Margin="20"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
